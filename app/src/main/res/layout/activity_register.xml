<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mailbox"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="80dip"
            android:gravity="bottom"
            android:text="邮箱:"
            android:textColor="#000000"
            android:textSize="8pt" />


        <EditText
            android:id="@+id/rg_mailbox"
            android:layout_width="235dip"
            android:layout_height="40dip"
            android:layout_alignBaseline="@+id/tv_mailbox"
            android:layout_alignBottom="@+id/tv_mailbox"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-6dp"
            android:layout_toRightOf="@+id/tv_mailbox"
            android:ems="10"
            />

        <EditText
            android:id="@+id/rg_password"
            android:layout_width="235dip"
            android:layout_height="40dip"
            android:layout_below="@+id/rg_mailbox"
            android:layout_alignLeft="@+id/rg_mailbox"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignLeft="@+id/tv_mailbox"
            android:layout_marginTop="140dp"
            android:gravity="bottom"
            android:text="密码:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/rg_confirm"
            android:layout_width="235dip"
            android:layout_height="40dip"
            android:layout_below="@+id/rg_password"
            android:layout_alignLeft="@+id/rg_password"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:maxLines="20"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignLeft="@+id/tv_password"
            android:layout_marginTop="190dp"
            android:gravity="bottom"
            android:text="确认密码:"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/rg_register"
        android:layout_width="280dip"
        android:layout_height="55dp"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:text="点击注册"
        android:textColor="#000000"
        android:textSize="18sp" />


</LinearLayout>
